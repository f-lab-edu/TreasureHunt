<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_treasure_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/imageview_item_treasure"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_item_treasure_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        Tools:text="남대문(국보)"
        app:layout_constraintStart_toEndOf="@+id/imageview_item_treasure"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_item_treasure_search_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        Tools:text="2023-07-04 13:51:22"
        app:layout_constraintStart_toStartOf="@+id/textview_item_treasure_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_item_treasure_name" />

    <TextView
        android:id="@+id/textview_item_treasure_is_like"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textStyle="bold"
        Tools:text="좋아요"
        app:layout_constraintStart_toEndOf="@+id/imageview_item_treasure"
        app:layout_constraintStart_toStartOf="@+id/textview_item_treasure_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_item_treasure_search_time" />

</androidx.constraintlayout.widget.ConstraintLayout>